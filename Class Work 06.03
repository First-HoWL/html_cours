css




body{
	margin: 0;
	padding: 0;
	font-family: "Roboto", sans-serif;
}

.main{
	margin-top: 4px;
	font-weight: bold;
	text-align: center;
	line-height: 30px;
	height: 30px;
	width: 100px;
	background-color: white;
	border-radius: 5px;
	border: 1px solid black;
	cursor: pointer;
}

nav{
	padding: 20px;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
}


.icon{
	font-weight: bold;
	font-size: 30px;
	text-align: center;
	line-height: 40px;
	height: 40px;
	width: 130px;
}
div.second_box{
	height: 500px;
	display: flex;
	align-items: center;
	justify-content: space-around;
	flex-wrap: wrap;
}

div.line{
	display: flex;
}

div.box{
	border: 1px solid black;
	
	border-radius: 10px;
	height: 484px;
	width: 393px;
	margin: 10px;
	box-sizing: border-box;
}

div.box > div.div_in_text_wrap > p{
	font-weight: 400;
	font-size: 24px;
	padding: 10px;
	margin-bottom: 3px;
}

div.box > img{
	border-radius: 10px 10px 0 0;
	height: 262px;
	width: 100%;
}

h3{
	margin: 0;
}

span.h4{
	font-size: 30px;
	font-weight: 500;
}

div.line_in_box{
	display: flex;
	justify-content: space-between;
}

div.butn{
	background-color: orange;
	color: white;
	padding: 20px 30px;
	border-radius: 10px;
	font-size: 20px;
	margin-left: 10px;
	cursor: pointer;
}

div.cost{
	color: orange;
	padding: 20px 30px;
	font-size: 20px;

}


@media (max-width: 676px){
	div.second_box{
		display: flex;
		flex-direction: column;
		align-items: normal;
		justify-content: normal;
		flex-wrap: nowrap;
	}
	div.box{
		border: 1px solid black;
		border-radius: 10px;
		width: auto;
		margin: 10px 0 10px 0;
		box-sizing: border-box;
		display: flex;
		flex-direction: row;

	}
	div.box > img{
		width: 40%;
		height: auto;
		border-radius: 10px 0 0 10px;
		display: inline-block;
	}
	div.box > div.div_in_text_wrap > p{
		font-weight: 400;
		font-size: 16px;
		padding: 10px;
		margin: 0;
		display: inline-block;
	}
	span.h4{
	font-size: 24px;
	font-weight: 500;
	}
	div.butn{
		width: 0;
		padding: 0;
		margin-left: 10px;
	}
	div.line_in_box{
		justify-content: flex-start
	}
	div.cost{
		background-color: rgb(255, 165, 0, 0.2);
		color: orange;
		padding: 15px 22px;
		font-size: 20px;
		border-radius: 10px;
	}

}
