css


body{
    padding: 0;
    margin: 0;
}

header{
    position: relative;
    background-color: #3e89eb;
}
nav > .buttons{
    display: flex;
    justify-content: center;
}


nav a{
    display: block;
    padding: 20px 40px;
    text-decoration: none;
    color: white;
}

nav a:hover{
    background-color: #0000001a;
}

@media (max-width: 676px){
    nav {
        display: inline-block;
        padding: 0 10px;
    }
    
    nav::before{
        content: "";
        display: block;
        width: 46px;
        height: 46px;
        margin: 4px;
        background-size: contain;
        background-image: url(icons8-menu.svg);
    }

    nav > .buttons{
        display: none;
        position: absolute;
        width: 60%;
        height: 100vh;
        left: -60%;
        top: 0;
        background-color: #2869be;
        box-shadow:  50vw 0 0 #00000000;
        display: flex;
        flex-direction: column;
        justify-content: normal;
        transition: left 0.5s, box-shadow 0.5s;
    }

    nav a{
        color: white;
    }
    
    nav:hover > .buttons{
        
        box-shadow:  50vw 0 50px #00000075;
        left: 0%;
    }
}

