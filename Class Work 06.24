        }
    }

    div.telegram{
        display: flex;
        flex-direction: row;
        margin-left: 20px;

        div.icon{
            background-image: url(Frame\ 6.png);
            background-size: cover;
            background-repeat: no-repeat;
            height: 40px;
            width: 40px;
            display: inline-block;
            margin: 0 !important;
        }
        div{
            display: flex;
            flex-direction: column;
            padding-top: 0 !important;
            margin-left: 3px;
            
            span.text_opasity{
                color: #C0C0C0;
                font-size: 12px;
                font-weight: 300;
                display: block;
