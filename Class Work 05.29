.main{
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: flex-start;
}

nav{
	padding-top: 20px;
	padding-bottom: 20px;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
}

.sect{
	color: grey;
	text-align: center;
	line-height: 40px;
	padding-right: 20px;
	padding-left: 20px;
	height: 40px;
	width: auto;
	transition: font-weight 0.9s, color 0.6s;
}

.sect:hover{
	color: white;
}

a{
	text-decoration: none;
}
.button{
	margin: 0;
	height: 40px;
	width: 120px;
	background-color: orange;
	border-radius: 10px;
	color: white;
	text-align: center;
	line-height: 40px;
	transition: font-weight 0.6s, transform 0.7s;
}

.button:hover{
	transform: scale(1.2);
}

img{
	height: 36px;
}

section{
	color: white;
}

span.h5{
	font-size: 14px;
	font-weight: 500;
}

span.h2{
	font-size: 57.33px;
	font-weight: 500;
}

section > p{
	font-weight: 400;
	font-size: 18px;
	color: grey;
}

main.central_text{
	display: flex;
	flex-direction: column;
	justify-content: center;
	width: 49%;
}

nav > section.icon > div{
	height: 40px;
	overflow: hidden;
}

nav > section.icon > div > img{
	position: center center;
	height: 100px;
	width: 100px;
	margin-top: -27px;
	margin-left: -25px;
}

div.max_div{
	width: 70%;
	margin-left: auto;
	margin-right: auto; 
}

main > section:first-child{
	height: 250px;
}
