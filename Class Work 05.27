css



body{
	background-color: rgb(209, 204, 204);
	margin: 0;
	padding: 0;
}



.main{
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: flex-start;
}

nav{
	padding: 20px;
	display: flex;
	background-color: black;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-start;
}

.sect{
	text-align: center;
	line-height: 40px;
	height: 40px;
	width: 130px;
	background-color: black;
	transition: font-weight 0.9s, color 0.6s;
}

.sect:hover{
	color: white;
	font-weight: bold;
}

a{
	text-decoration: none;
	color: grey;
}

.icon{
	font-weight: bold;
	text-align: center;
	line-height: 40px;
	height: 40px;
	width: 130px;
	background-color: black;
	color: white;
}

h3{
	margin: 0px;
}

main{
	margin-top: 2%;
	margin-left: 3%;
	width: 65%;
	background-color: white;
	box-shadow: 0px 20px 10px 5px rgb(0, 0, 0, 0.5);
}

.to_padding{
	padding: 30px;
}

p > img{
	width: 100%;
}

.central{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

div.sidebar{
	margin-top: 2%;
	margin-right: 3%;
	width: 26%;
	padding: 0;
	display: flex;
	flex-direction: column;
    justify-content: flex-start;
}

.icon2{
	height: 40px;
	margin-right: 10px;
}

.events{
	margin-bottom: 10px;
}

.flex_box{
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
}

.text{
	margin-top: 0;
}


div.sidebar > aside{
	padding: 20px;
	background-color: white;
	margin-bottom: 10px;
	box-shadow: 0px 20px 10px 5px rgb(0, 0, 0, 0.5); 
}

div.sidebar > aside:last-child > p{
	margin: 0;
}

.h2{
	font-size: 30px;
	font-weight: bold;
}
