css



form{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: lightgray;
    width: 300px;
    padding: 25px;
    box-sizing: border-box;
    box-shadow: 0 0 30px rgb(0, 0, 0);
}

body{
    background-color: rgb(255, 60, 60);
}

input{
    background-color: #ffffff31;
    border: none;
    text-align: center;
    height: 35px;
    margin-bottom: 10px;
    width: 100%;
}

input:focus{
    outline: none !important;
    border-bottom: 1px solid black;
}

button{
    height: 35px;
    width: 100%;
    background-color: green;
    border: none;
    color: white;
    font-weight: 500;
    margin-bottom: 10px;
    cursor: pointer;
    border-bottom: 3px solid rgb(4, 99, 4);
    
}

a{
    text-decoration: none;
    color: orangered;
}

div.under_form{
    padding: 20px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 300px;
}
div.line{
    display: flex;
    justify-content: space-between;
}

div.social_media{
    display: inline-block;
    color: white;
    padding: 15px 40px;
    box-shadow: 0 0 7px black;
    cursor: pointer;
}

div.social_media:first-child{
    background-color: blue;
}

div.social_media:last-child{
    background-color: rgb(88, 171, 199);
}

span{
    text-align: center;
    color: white;
    margin-bottom: 15px;
}

div.general{
    display: flex;
    flex-direction: column;
    height: 90vh;
    width: 98vw;
    justify-content: center;
    align-items: center;
}
